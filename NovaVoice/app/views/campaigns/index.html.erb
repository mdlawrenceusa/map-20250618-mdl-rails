<div class="bg-white shadow-sm rounded-lg">
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Campaigns</h1>
        <p class="text-sm text-gray-600 mt-1">
          Manage your outbound calling campaigns
        </p>
      </div>
      <%= link_to "New Campaign", new_campaign_path, 
          class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg" %>
    </div>
  </div>

  <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="bg-white p-4 rounded-lg border">
        <div class="text-sm font-medium text-gray-500">Total Leads</div>
        <div class="text-2xl font-bold text-gray-900"><%= @total_leads %></div>
      </div>
      <div class="bg-white p-4 rounded-lg border">
        <div class="text-sm font-medium text-gray-500">Callable Leads</div>
        <div class="text-2xl font-bold text-green-600"><%= @callable_leads %></div>
      </div>
      <div class="bg-white p-4 rounded-lg border">
        <div class="text-sm font-medium text-gray-500">Active Campaigns</div>
        <div class="text-2xl font-bold text-blue-600"><%= @campaigns.active.count %></div>
      </div>
    </div>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Campaign
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Progress
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Batch Size
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Created
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @campaigns.each do |campaign| %>
          <% progress = campaign.progress_summary %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div>
                <div class="text-sm font-medium text-gray-900">
                  <%= link_to campaign.name, campaign, class: "text-blue-600 hover:text-blue-800" %>
                </div>
                <% if campaign.description.present? %>
                  <div class="text-sm text-gray-500">
                    <%= truncate(campaign.description, length: 60) %>
                  </div>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                <%= case campaign.status
                    when 'draft' then 'bg-gray-100 text-gray-800'
                    when 'scheduled' then 'bg-yellow-100 text-yellow-800'
                    when 'running' then 'bg-blue-100 text-blue-800'
                    when 'paused' then 'bg-orange-100 text-orange-800'
                    when 'completed' then 'bg-green-100 text-green-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>">
                <%= campaign.status.humanize %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <% if progress[:total_calls] > 0 %>
                <div class="flex items-center">
                  <div class="flex-1 bg-gray-200 rounded-full h-2 mr-2">
                    <% completed_pct = (progress[:completed].to_f / progress[:total_calls] * 100).round %>
                    <div class="bg-green-600 h-2 rounded-full" style="width: <%= completed_pct %>%"></div>
                  </div>
                  <span class="text-xs">
                    <%= progress[:completed] %>/<%= progress[:total_calls] %>
                  </span>
                </div>
              <% else %>
                <span class="text-gray-500">No calls</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= campaign.batch_size %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= campaign.created_at.strftime("%m/%d/%Y") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
              <%= link_to "View", campaign, class: "text-blue-600 hover:text-blue-800" %>
              
              <% if campaign.status == 'draft' %>
                <%= link_to "Edit", edit_campaign_path(campaign), class: "text-indigo-600 hover:text-indigo-800" %>
              <% end %>
              
              <% if campaign.status == 'paused' %>
                <%= link_to "Resume", resume_campaign_path(campaign), method: :patch, 
                    class: "text-green-600 hover:text-green-800" %>
              <% elsif campaign.status == 'running' %>
                <%= link_to "Pause", pause_campaign_path(campaign), method: :patch,
                    class: "text-orange-600 hover:text-orange-800" %>
              <% end %>
              
              <% if campaign.status == 'draft' %>
                <%= link_to "Delete", campaign, method: :delete,
                    confirm: "Are you sure?",
                    class: "text-red-600 hover:text-red-800" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <% if @campaigns.empty? %>
      <div class="text-center py-12">
        <div class="text-gray-500 mb-4">No campaigns created yet</div>
        <%= link_to "Create your first campaign", new_campaign_path,
            class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg" %>
      </div>
    <% end %>
  </div>
</div>
