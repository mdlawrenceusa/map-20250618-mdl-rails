# Vonage Outbound Configuration
VONAGE_OUTBOUND_API_KEY=your_outbound_api_key
VONAGE_OUTBOUND_API_SECRET=your_outbound_api_secret
VONAGE_OUTBOUND_APPLICATION_ID=your_outbound_app_id
VONAGE_OUTBOUND_PRIVATE_KEY_PATH=/app/keys/outbound_private.key
VONAGE_OUTBOUND_NUMBER=your_outbound_phone_number

# Vonage Inbound Configuration
VONAGE_INBOUND_API_KEY=your_inbound_api_key
VONAGE_INBOUND_API_SECRET=your_inbound_api_secret
VONAGE_INBOUND_APPLICATION_ID=your_inbound_app_id
VONAGE_INBOUND_PRIVATE_KEY_PATH=/app/keys/inbound_private.key

# AWS Configuration (optional if using IAM role)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Application Configuration
WEBHOOK_BASE_URL=https://gospelshare.io
PORT=8080
WS_PORT=8081
LOG_LEVEL=info

# Default prompt for inbound calls
DEFAULT_INBOUND_PROMPT="You are Esther, Mike Lawrence Productions' scheduling assistant. Your ONLY job is to schedule 15-minute web meetings between senior pastors and Mike Lawrence about our Gospel outreach program. Keep responses brief (under 25 words) and always redirect to scheduling the meeting with Mike Lawrence."